<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="Installer" Language="1033" Version="1.0.0.0"
           Manufacturer="Derek"
           UpgradeCode="4537a608-c4ba-4c40-bd7c-6fba12aad55d">
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate />

    <Feature Id="HedgehogService" Title="Installer" Level="1">
      <ComponentRef Id="HedgehogService" />
      <ComponentRef Id="ShellUI" />
    </Feature>
    <Feature Id="MonkeyService" Title="Installer" Level="1">
      <ComponentRef Id="MonkeyService" />
      <ComponentRef Id="ShellUI" />
    </Feature>
    <Feature Id="ShellUI" Title="Installer" Level="1">
      <ComponentRef Id="ShellUI" />
    </Feature>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="DerekCo" Name="Installer">
          <Component Id="HedgehogService">
            <File Id="HedgehogService.dll" Name="HedgehogService.dll" Source="..\HedgehogService\bin\Debug\HedgehogService.dll" KeyPath="yes"  />
            <File Id="HedgehogService_CommonLibrary.dll" Name="CommonLibrary.dll" Source="..\HedgehogService\bin\Debug\CommonLibrary.dll" />
          </Component>
          <Component Id="MonkeyService">
            <File Id="MonkeyService.dll" Name="MonkeyService.dll" Source="..\MonkeyService\bin\Debug\MonkeyService.dll" KeyPath="yes" />
            <!--<File Id="MonkeyService_CommonLibrary.dll" Name="CommonLibrary.dll" Source="..\CommonLibrary\bin\Debug\CommonLibrary.dll" />-->
          </Component>
          <Component Id="ShellUI">
            <File Id="ShellUI.dll" Name="ShellUI.dll" Source="..\ShellUI\bin\Debug\ShellUI.exe"  KeyPath="yes" />
          </Component>
        </Directory>
      </Directory>
    </Directory>
  </Fragment>
</Wix>
